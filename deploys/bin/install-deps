import os
import subprocess


def execute_cmd(*args, get_output=False):
    print('Execute command "{0}"'.format(' '.join(args)))
    if get_output:
        return subprocess.check_output(args).decode('utf8')
    else:
        subprocess.check_call(args)


# Do not require users input.
os.environ['DEBIAN_FRONTEND'] = 'noninteractive'


print('Update packages list')
execute_cmd('apt-get', 'update')


print('Upgrade installed packages')
execute_cmd('apt-get', 'upgrade', '-y')


print('Install new packages')
execute_cmd(
    'apt-get', 'install', '-y',
    # For Python packages.
    'libpq-dev', 'python3-dev', 'python3-pip',
    # For Klever Bridge.
    'gettext', 'nginx', 'postgresql',
    # For Klever Core.
    'bc', 'git', 'graphviz',
    # For CPAchecker 1.6+.
    'openjdk-8-jre-headless',
    # For building the Linux kernel.
    'make', 'libc6-dev-i386'
)


print('Install Python packages')
execute_cmd(
    'pip3', 'install', '-U',
    # For Klever Bridge.
    'Django', 'gunicorn', 'psycopg2', 'pytz',
    # For Klever Core.
    'jinja2', 'graphviz', 'ply', 'requests', 'setuptools_scm',
    # For Klever Scheduler.
    'consulate'
)
