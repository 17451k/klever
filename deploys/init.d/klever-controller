### BEGIN INIT INFO
# Provides:          klever-controller
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Klever computational resources and services controller
# Description:       Klever Controller detects and reports available computational resources and services
### END INIT INFO

DESC="Klever Controller"
NAME=klever-controller
DAEMON=/home/debian/klever/scheduler/bin/client-controller
PIDFILE=/var/run/"$NAME".pid
SCRIPTNAME=/etc/init.d/"$NAME"
USER=debian
GROUP=debian

. /lib/lsb/init-functions

case "$1" in
    start)
        log_daemon_msg "Starting $DESC"
        if [ -s ${PIDFILE} ] && kill -0 $(cat ${PIDFILE}) >/dev/null 2>&1; then
            log_progress_msg "apparently already running"
            log_end_msg 0
            exit 0
        fi
        if start-stop-daemon --start --quiet --background --pidfile ${PIDFILE} --make-pidfile --chuid ${USER} \
            --group ${GROUP} --exec ${DAEMON} -- /home/debian/klever-conf/controller.json
        then
            rc=0
            sleep 1
            if ! kill -0 $(cat ${PIDFILE}) >/dev/null 2>&1; then
                log_failure_msg "$DESC failed to start"
                rc=1
            fi
        else
            rc=1
        fi
        if [ ${rc} -eq 0 ]; then
            log_end_msg 0
        else
            log_end_msg 1
            rm -f ${PIDFILE}
        fi
        ;;
    stop)
        log_daemon_msg "Stopping $DESC"
        start-stop-daemon --stop --quiet --oknodo --pidfile ${PIDFILE}
        log_end_msg $?
        rm -f ${PIDFILE}
        ;;
    *)
        log_action_msg "Usage: $SCRIPTNAME {start|stop}"
        exit 2
        ;;
esac

exit 0
