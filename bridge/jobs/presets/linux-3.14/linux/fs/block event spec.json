{
  "Linux 3.14 (base)": {
    "kernel model": {
      "add_disk": {
        "comment": "Add partitioning information to kernel list.",
        "labels": {
          "disk": {
            "parameter": true,
            "container": true,
            "interface": [
              "block_device.gendisk"
            ]
          },
          "block": {
            "parameter": true,
            "resource": true,
            "pointer": true,
            "interface": [
              "block_device.block_dev"
            ]
          }
        },
        "process": "<assign>.[register]",
        "actions": {
          "register": {
            "parameters": [
              "%block%", "%disk%"
            ]
          },
          "assign": {
            "comment": "Get disk from arguments.",
            "statements": [
              "%block% = $ALLOC(%block%);",
              "%disk% = $ARG1;",
              "%block%->bd_disk = %disk%;",
              "ldv_add_disk();"
            ]
          }
        }
      },
      "del_gendisk": {
        "comment": "Remove partitioning information from kernel list.",
        "labels": {
          "disk": {
            "parameter": true,
            "container": true,
            "interface": [
              "block_device.gendisk"
            ]
          }
        },
        "process": "<assign>.[deregister]",
        "actions": {
          "deregister": {
            "parameters": [
              "%disk%"
            ]
          },
          "assign": {
            "comment": "Get disk from arguments.",
            "statements": [
              "%disk% = $ARG1;",
              "ldv_del_gendisk();"
            ]
          }
        }
      }
    },
    "environment processes": {
      "block_scenario": {
        "comment": "Block device operations scenario.",
        "labels": {
          "disk": {
            "container": true,
            "interface": [
              "block_device.gendisk"
            ]
          },
          "ops": {
            "container": true,
            "pointer": true,
            "interface": [
              "block_device.block_device_operations"
            ]
          },
          "block": {
            "resource": true,
            "pointer": true,
            "interface": [
              "block_device.block_dev"
            ]
          },
          "callback": {
            "callback": true
          },
          "ret": {
            "signature": "int a"
          }
        },
        "process": "(!register).{main}",
        "actions": {
          "main": {
            "comment": "Block device is not initialized.",
            "process": "[open].(<y_ret>.{call} | <n_ret>.{main}) | <free>.(deregister)"
          },
          "call": {
            "comment": "Initializations are done, proceed to the other callbacks.",
            "process": "[callback].{call} | [release].<free>.(deregister)"
          },
          "register": {
            "parameters": [
              "%block%", "%disk%"
            ]
          },
          "deregister": {
            "condition": [
              "%disk% == $ARG1"
            ],
            "parameters": [
              "%disk%"
            ]
          },
          "callback": {
            "comment": "Call any random callback.",
            "callback": "%callback%",
            "parameters": [
              "%block%"
            ]
          },
          "release": {
            "comment": "Release block device.",
            "callback": "%ops.release%",
            "parameters": [
              "%block%"
            ]
          },
          "open": {
            "comment": "Initialize block device.",
            "callback": "%ops.open%",
            "parameters": [
              "%block%"
            ],
            "callback return value": "%ret%",
            "post-call": [
              "%ret% = ldv_filter_err_code(%ret%);"
            ]
          },
          "free": {
            "comment": "Free memory of block device.",
            "statements": [
              "$FREE(%block%);"
            ]
          },
          "y_ret": {
            "comment": "Block device open has been successful.",
            "condition": [
              "%ret% == 0"
            ]
          },
          "n_ret": {
            "comment": "Block device open has failed.",
            "condition": [
              "%ret% != 0"
            ]
          }
        }
      }
    }
  }
}