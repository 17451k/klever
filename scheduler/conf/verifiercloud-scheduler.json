{
  "Klever Bridge": {
    "name": "localhost:8998",
    "user": "service",
    "password": "service"
  },
  "scheduler": {
    "type": "scheduler",
    "production": true,
    "processes": 1.0,
    "process pool": false,
    "controller address": "http://localhost:8500",
    "keep working directory": false,
    "iteration timeout": {
      "short": 5,
      "medium": 10,
      "long": 20
    },
    "web-interface address": "https://vcloud.sosy-lab.org/cpachecker/webclient",
    "web client location": "/abs/path/to/scripts/benchmark"
  },
  "common": {
    "working directory": "verifiercloud-scheduler-work-dir",
    "keep working directory": false,
    "logging": {
      "version": 1,
      "disable_existing_loggers": false,
      "formatters": {
        "brief": {
          "format": "%(name)s %(levelname)5s> %(message)s"
        },
        "detailed": {
          "format": "%(asctime)s (%(filename)s:%(lineno)03d) %(name)s %(levelname)5s> %(message)s"
        }
      },
      "handlers": {
        "console": {
          "class": "logging.StreamHandler",
          "level": "INFO",
          "formatter": "brief",
          "stream": "ext://sys.stdout"
        },
        "info_file_handler": {
          "class": "logging.handlers.RotatingFileHandler",
          "level": "DEBUG",
          "formatter": "detailed",
          "filename": "info.log",
          "maxBytes": 10485760,
          "backupCount": 20,
          "encoding": "utf8"
        },
        "error_file_handler": {
          "class": "logging.handlers.RotatingFileHandler",
          "level": "ERROR",
          "formatter": "detailed",
          "filename": "errors.log",
          "maxBytes": 10485760,
          "backupCount": 20,
          "encoding": "utf8"
        }
      },
      "loggers": {
        "default": {
          "level": "ERROR",
          "handlers": [
            "console"
          ],
          "propagate": "no"
        }
      },
      "root": {
        "level": "DEBUG",
        "handlers": [
          "console",
          "info_file_handler",
          "error_file_handler"
        ]
      }
    }
  }
}
